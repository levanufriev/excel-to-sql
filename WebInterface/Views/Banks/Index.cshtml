@model List<Bank>

@{
    ViewData["Title"] = "List of Banks";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Sheets" asp-action="Index" asp-route-id="@item.Id">Show</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
